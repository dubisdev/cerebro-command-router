{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "rootDir": "src/",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]

}
